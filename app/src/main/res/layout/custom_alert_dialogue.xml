<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_title"
            style="@style/tv_dialog_header"
            android:layout_width="match_parent"
            android:text="Verification Code" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5sp"
            android:padding="5sp"
            android:src="@mipmap/icon_close"
            android:tint="@color/white" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alert_text"
        style="@style/tv_normal"
        android:layout_width="match_parent"
        android:gravity="start|center_horizontal"
        android:padding="5sp"
        android:text="@string/app_name"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:layout_margin="15sp"
        android:padding="10sp"
        android:background="@drawable/box_buyleads_leadview"
        android:hint="Enter Mobile Number"
        android:inputType="number"
        android:maxLength="10"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/linear_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Enter OTP to end the journey."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_clock"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edttxt_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/box_buyleads_leadview"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edttxt_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/box_buyleads_leadview"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edttxt_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/box_buyleads_leadview"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edttxt_4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/box_buyleads_leadview"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_resend_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:text="@string/resend_verification_code"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:visibility="visible" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_submit"
        style="@style/tv_button"
        android:layout_gravity="end"
        android:layout_margin="10sp"
        android:text="SUBMIT"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lay_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_cancel"
            style="@style/tv_button"
            android:layout_margin="10sp"
            android:visibility="gone"
            tools:text="@string/cancel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_search"
            style="@style/tv_button"
            android:layout_margin="10sp"
            android:visibility="gone"
            tools:text="@string/search" />

    </LinearLayout>

</LinearLayout>
