<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/pattuimage"
    android:gravity="left|center"
    android:orientation="vertical"
    android:padding="10sp"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.aniapps.utils.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1sp"
            android:src="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2sp"
            android:fontFamily="@font/cera_gr_medium"
            android:gravity="center_vertical"
            android:text="NAGRAJ PILLA"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2sp"
            android:fontFamily="@font/cera_gr_regular"
            android:gravity="center_vertical"
            android:text="KAKINDANA"
            android:textColor="@color/white" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="5sp"
        android:background="@drawable/border_viewmore"
        android:fontFamily="@font/cera_gr_medium"
        android:padding="10dp"
        android:text="EDIT PROFILE"
        android:visibility="gone"
        android:textColor="@color/colorPrimary" />


</LinearLayout>
